<%= link_to t('.new'), new_admin_user_path, class: "btn btn-success float-right" %>

<table class="table table-hover responsive">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email Name</th>
      <th>Created At</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>
        <td>
          <%= link_to "Edit", edit_admin_user_path(user), id: dom_id(user, :edit), class: "btn btn-info" %>
          <%= link_to "Show", admin_user_path(user), id: dom_id(user, :show), class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
